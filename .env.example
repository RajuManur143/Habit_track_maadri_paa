# Flask environment: development or production
FLASK_ENV=production

# Database path (optional, defaults to habits.db in app directory)
# DATABASE_PATH=/var/lib/habit-tracker/habits.db

# Secret key for session encryption (REQUIRED for production)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secure-secret-key-here-change-this

# Port to run the application on (optional, defaults to 5000)
PORT=5000